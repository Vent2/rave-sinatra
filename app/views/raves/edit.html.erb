<label for="name">Name:</label>
	<input type="text" name="name"><br>
<label for="travel_cost">Travel Cost:</label>
    <input type="number" min="0.00" max="10000.00" step="0.01" name="travel_cost"/><br>
<label for="food_cost">Food Cost:</label>
	<input type="number" min="0.00" max="10000.00" step="0.01" name="food_cost"/><br>
<label for="hotel_cost">Hotel Cost:</label>
	<input type="number" min="0.00" max="10000.00" step="0.01" name="hotel_cost"/><br>
   <button type="button" class="btn btn-outline-light"> <input type="submit" value="Edit"></button>
